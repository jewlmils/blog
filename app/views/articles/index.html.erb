<p style="color: green"><%= notice %></p>


<h2>Articles</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.id%></td>
            <td><%= link_to article.title, article %></td>
            <td><%= article.writer_name%></td>
            <td><%= article.body%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div>
    <%= link_to 'New Article', new_article_path %>
</div>